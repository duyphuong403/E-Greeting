@model PagedList.IPagedList<Application.eGreeting.Models.Card>

@{
    ViewBag.Title = "NewYear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (ViewBag.Message != null)
{
    <span class="success sweet-alert"> @ViewBag.Message</span>
}



@using PagedList.Mvc;
@using PagedList;



<div class="row">
    @if (Model != null)
    {
        foreach (var item in Model)
        {


            <h3></h3>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="box-card">
                    <img src="~/ImageCard/@item.ImageName" alt="image" class="image" style="width:100%">
                    <div class="middle">
                        <a href="/User/CreateTrans/@item.CardId" class="btn-select">SELECT</a>
                    </div>
                    <div class="name-card">
                        <h6>@Html.DisplayFor(modelItem => item.NameCard)</h6>
                    </div>
                </div>
            </div>

        }
    }
    else
    {
        <h3>Nothing to display</h3>
    }
</div>
@Html.PagedListPager(Model, page => Url.Action("NewYear", new { page, @class = "page-link" }), new PagedListRenderOptions()
    {
       ContainerDivClasses = new [] { "Page", "navigation" },
       LiElementClasses = new List<string> { "page-item" }
    })


