@model PagedList.IPagedList<Application.eGreeting.Models.Card>

@{
    ViewBag.Title = "Manage Card";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int i = 1;
}

<h2>Manage Card</h2>

@using PagedList.Mvc;
@using PagedList;
<p>
    @Html.ActionLink("Create New Card", "CreateCard", "Admin", new { @class = "btn btn-success" })
</p>
<table class="table">
    

    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td width="20%">
                <img src="~/ImageCard/@item.ImageName" alt="@item.ImageName" style="width: 100%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCard", new { id = item.CardId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "DeleteCard", new { id = item.CardId, ImageName = item.ImageName }, new { @onclick = "return confirm('Are you sure ?')", @id = "btnDelete", @class = "btn btn-danger" })
            </td>
        </tr>
        i++;
    }

</table>
<center>

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("ManageCard",
        new { page }))
</center>

