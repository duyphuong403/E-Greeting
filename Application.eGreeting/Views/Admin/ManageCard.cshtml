@model PagedList.IPagedList<Application.eGreeting.Models.Card>

@{
    ViewBag.Title = "Manage Card";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int i = 1;
}

<h2>Manage Card</h2>

@using PagedList.Mvc;
@using PagedList;
<p>
    @Html.ActionLink("Create New Card", "CreateCard", "Admin", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        
        <th>

            NameCard
        </th>
        <th>

            Category
        </th>
        <th>

            Image
        </th>
        <th>

            DateCreated
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td width="20%">
                <img src="~/ImageCard/@item.ImageName" alt="@item.ImageName" style="width: 100%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCard", new { id = item.CardId }, new { @class = "btn btn-warning" })
                @*@Html.ActionLink("Delete", "DeleteCard", new { id = item.CardId, ImageName = item.ImageName }, new { @onclick = "doDelete(" + item.CardId + ")", @id = "btnDelete", @class = "btn btn-danger" })*@
                <a onClick="doDelete({id:@item.CardId,ImageName:'@item.ImageName'})" class="btn btn-danger btn-circle">
                    <i style="color: #fff" class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        i++;
    }

</table>


    @Html.PagedListPager(Model, page => Url.Action("ManageCard", new { page, @class = "page-link" }), new PagedListRenderOptions()
    {
        ContainerDivClasses = new [] { "Page", "navigation" },
        LiElementClasses = new List<string> { "page-item" }
    })


<script>
    // delete
    // không thể truyên 2 parameter mà phải truyền = 1 object
    function doDelete(obj) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonColor: '#d33'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "/Admin/DeleteCard", // Yêu cầu lấy dữ liệu: /controller/tên hàm
                    type: "POST",
                    data: {
                        id: obj.id,
                        ImageName: obj.ImageName
                    }, // id phải giống id truyền vào trong TinTucController Delete
                    success: function (res) {
                        // success là hàm được gọi khi yêu cầu thành công
                        // res là giá trị trả về đặt tên là gì cũng được()
                        if (res) {
                            Swal.fire({
                                title: 'Delete success',
                                text: 'Successfully deleted!',
                                type: 'success'
                            }).then(() => {
                                location.reload();
                            });
                        }
                        else {
                            Swal.fire({
                                title: 'Delete failed',
                                text: 'An error occurred while deleting!',
                                type: 'error'
                            })
                        }
                    }
                })
                Swal.fire(
                    'Deleted!',
                    'Your file has been deleted!',
                    'success'
                )
            }
        })
    }
</script>