@model PagedList.IPagedList<Application.eGreeting.Models.User>
@{
    ViewBag.Title = "Manage User";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int i = 1;
}

<h2>Manage User</h2>


@using PagedList.Mvc;
@using PagedList;

<p>
    @Html.ActionLink("Create New User", "CreateUser", "Admin", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>No.</th>
        <th>
            UserName
        </th>
        <th>
            Role
        </th>
        <th>
            Subcribe Send
        </th>
        <th>
            Subcribe Receive
        </th>
        <th>
            FullName
        </th>
        <th>
            Gender

        </th>
        <th>
            Phone Number
        </th>
        <th>
            Email
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @if (item.Role)
                {
                    <label>Admin</label>
                }
                else
                {
                    <label>User</label>
                }
            </td>
            <td>
                @if (item.IsSubcribeSend)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
            <td>
                @if (item.IsSubcribeReceive)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>

                @if (item.Gender)
                {
                    <label>Male</label>
                }
                else
                {
                    <label>Female</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.UserId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.UserId }, new {@class = "btn btn-danger",
                onclick = "return confirm('Are you sure you wish to delete this User?');" })
            </td>
        </tr>
        i++;
    }

</table>

<center>

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("ManageUser",
        new { page }))
</center>