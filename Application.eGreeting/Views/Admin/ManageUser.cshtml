@model PagedList.IPagedList<Application.eGreeting.Models.User>
@{
    ViewBag.Title = "Manage User";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int i = 1;
}

<h2>Manage User</h2>


@using PagedList.Mvc;
@using PagedList;

<p>
    @Html.ActionLink("Create New User", "CreateUser", "Admin", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>No.</th>
        <th>
            UserName
        </th>
        <th>
            Role
        </th>
        <th>
            Subcribe Send
        </th>
        <th>
            Subcribe Receive
        </th>
        <th>
            FullName
        </th>
        <th>
            Gender
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Email
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @if (item.Role)
                {
                    <label>Admin</label>
                }
                else
                {
                    <label>User</label>
                }
            </td>          
            <td>
                @if (item.IsSubcribeSend)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
            <td>
                @if (item.IsSubcribeReceive)
                {
                    <label>Yes</label>
                }
                else
                {
                    <label>No</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>

                @if (item.Gender)
                {
                    <label>Male</label>
                }
                else
                {
                    <label>Female</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.UserId }, new { @class = "btn btn-warning" })
                @if (item.UserId != 1)
                {
                    <a onClick="doDelete(@item.UserId)" class="btn btn-danger btn-circle">
                        <i style="color: #fff" class="fas fa-trash"></i>
                    </a>
                }
            </td>
        </tr>
        i++;
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("ManageUser", new { page, @class = "page-link" }), new PagedListRenderOptions()
   {
       ContainerDivClasses = new [] { "Page", "navigation" },
       LiElementClasses = new List<string> { "page-item" }
   })


<script>
    // delete
    function doDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonColor: '#d33'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "/Admin/DeleteUser", // Yêu cầu lấy dữ liệu: /controller/tên hàm
                    type: "POST",
                    data: {
                        id: id,
                    }, // id phải giống id truyền vào trong TinTucController Delete
                    success: function (res) {
                        // success là hàm được gọi khi yêu cầu thành công
                        // res là giá trị trả về đặt tên là gì cũng được()
                        if (res) {
                            Swal.fire({
                                title: 'Delete success',
                                text: 'Successfully deleted!',
                                type: 'success'
                            }).then(() => {
                                location.reload();
                            });
                        }
                        //    else {
                        //        Swal.fire({
                        //            title: 'Delete failed',
                        //            text: 'An error occurred while deleting!',
                        //            type: 'error'
                        //        })
                        //    }
                    }
                })
                //Swal.fire(
                //    'Deleted!',
                //    'Your file has been deleted!',
                //    'success'
                //)
            }
        })
    }
</script>