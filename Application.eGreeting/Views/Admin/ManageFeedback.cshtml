@model IEnumerable<Application.eGreeting.Models.Feedback>

@{
    ViewBag.Title = "ManageFeedback";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int i = 1;
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Username</th>
                        <th>Subject</th>
                        <th>Content</th>
                        <th>DataCreated</th>
                        <th>Function</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Username</td>
                            <td>@item.Subject</td>
                            <td>@item.Content</td>
                            <td>@item.DataCreated</td>
                            <td>
                                <a onClick="doDelete(@item.Id)" href="#" class="btn btn-danger btn-circle">
                                    <i style="color: #fff" class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // delete
    // idData là biến truyền vào (đặt tên là gì cũng được)
    function doDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonColor: '#d33'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: "/Admin/DeleteFeedback", // Yêu cầu lấy dữ liệu: /controller/tên hàm
                    type: "POST",
                    data: { id: id }, // id phải giống id truyền vào trong TinTucController Delete
                    success: function (res) {
                        // success là hàm được gọi khi yêu cầu thành công
                        // res là giá trị trả về đặt tên là gì cũng được()
                        if (res) {
                            Swal.fire({
                                title: 'Delete success',
                                text: 'Successfully deleted!',
                                type: 'success'
                            }).then((res2) => {
                                location.reload();
                            });
                        }
                        else {
                            Swal.fire({
                                title: 'Delete failed',
                                text: 'An error occurred while deleting!',
                                type: 'error'
                            })
                        }
                    }
                })
                Swal.fire(
                    'Deleted!',
                    'Your file has been deleted!',
                    'success'
                )
            }
        })
    }
</script>
