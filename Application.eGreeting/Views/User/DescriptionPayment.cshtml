<script>
    function doPayment() {
        Swal.fire({
            title: 'Confirm',
            text: "By click OK, you'll accept pay $10 per month. Are you sure ?",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Yes, pay it!',
            cancelButtonColor: '#d33'
        }).then((result) => {
            if (result.value) {
                window.location.href = "/User/Payment";
            }
        })
    }
</script>